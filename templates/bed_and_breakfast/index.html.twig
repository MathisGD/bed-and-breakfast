{% extends 'container.html.twig' %}

{% block title %}Bed & Breakfast
{% endblock %}

{% block body %}
	<style>
		.mainContainer {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			flex-grow: 1
		}
		.content {
			font: 18px / 1.5 sans-serif;
		}
		.content code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>
	<h1>Bed & Breakfast - Home</h1>
	<section class="py-5">
		<div class="container px-4 px-lg-5 mt-5">
			<div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
				{% for room in rooms %}
					<div class="col mb-5">
						<div class="card h-100">
							<img class="card-img-top" src="{{ room.photo }}" alt="..."/>
							<div class="card-body p-4">
								<div class="text-center">
									<h5 class="fw-bolder">{{ room.summary }}</h5>
									{{ room.price }}
									â‚¬
								</div>
							</div>
							<div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
								<div class="text-center">
									<a class="btn btn-outline-dark mt-auto" href="{{ room.id }}">View details</a>
								</div>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</section>

{% endblock %}
